{% extends 'base.html.twig' %}

{% block title %}Accueil - Restaurant Manager{% endblock %}

{% block stylesheets %}
<style>
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}
    .hero {
        position: relative;
        height: 500px;
        width: 100%;
        overflow: hidden;
    }

    .hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .overlay {
        position: absolute;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 1rem;
    }

    .hero-content h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .hero-content p {
        font-size: 1.25rem;
        opacity: 0.9;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 1rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        transition: transform 0.3s;
    }


    .card-icon {
        font-size: 2.5rem;
        color: #C7D300;
        margin-bottom: 1rem;
    }

    .card h3 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .card p {
        color: #666;
        margin-bottom: 1.5rem;
    }

    .btn {
        display: inline-block;
        background-color: #007C92;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #005f6b;
    }

</style>
{% endblock %}

{% block body %}
<div class="hero">
    <img src="https://static.wixstatic.com/media/108949_a0c3b5ba92274bbd84f748e040554ef2~mv2_d_6720_4480_s_4_2.jpg" alt="Mongoo Salade">
    <div class="overlay"></div>
    <div class="hero-content">
        <div>
            <h1><span class="text-[#C7D300]">Bienvenue</span> sur Restaurant Manager</h1>
            <p>Gérez facilement vos restaurants et vos employés</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="grid">
        <div class="card">
            <div class="card-icon">
                <i class="bi bi-shop"></i>
            </div>
            <h3>Restaurants</h3>
            <p>Gérez vos restaurants, leurs informations et leurs employés.</p>
            <a href="{{ path('app_restaurant_index') }}" class="btn">Voir les restaurants</a>
        </div>

        <div class="card">
            <div class="card-icon">
                <i class="bi bi-people"></i>
            </div>
            <h3>Employés</h3>
            <p>Consultez et gérez votre personnel.</p>
            <a href="{{ path('app_employee_index') }}" class="btn">Voir les employés</a>
        </div>
    </div>
</div>
{% endblock %}
